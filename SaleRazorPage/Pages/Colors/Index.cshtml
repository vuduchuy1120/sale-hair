@page
@model SaleRazorPage.Pages.Colors.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Color[0].Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color[0].NameUnAccent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color[0].Image)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Color)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NameUnAccent)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <div style="width: 100px; height: 100px; background-color: @item.Code; border: 1px solid #000;"></div>
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
